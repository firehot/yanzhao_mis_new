<ul class="wat-cf">
  <li class="first <%=check_sub_active_tab(1)%>"><%= link_to "结算表", settlements_path(:active_sub_tab => 1,'search[created_at_gte]' => 2.months.ago.beginning_of_day)   %></li>
  <li class="<%=check_sub_active_tab(6)%>"><%= link_to "待审核", settlements_path(:active_sub_tab => 6,'search[state_eq]' => 'draft')   %></li>
  <li class="<%=check_sub_active_tab(7)%>"><%= link_to "待签字", settlements_path(:active_sub_tab => 7,'search[state_eq]' => 'audited',:show_select => 1)   %></li>
  <%if params[:active_sub_tab] == '3'%>
    <li class="active"><%= link_to "新建", self.send("new_#{@param_name}_path",:active_sub_tab => 3)   %></li>
  <%end%>
  <%if params[:active_sub_tab] == '4'%>
    <li class="active"><%= link_to "修改", self.send("edit_#{@param_name}_path",instance_variable_get("@#{@param_name}"),:active_sub_tab => 4)   %></li>
  <%end%>
