<div class="block">
  <div class="secondary-navigation">
    <%= render :partial => 'violations/caption' %>
  </div>
  <div class="content">
    <h2 class="title"><%="处罚信息列表"%></h2>
    <div class="inner">
      <table class="table">
        <%@punishments.group_by(&:org).each do |org,ps| -%>
          <tr><%=org.name%></tr>
          <%ps.each do |p|%>
            <tr class="<%= cycle("odd", "even") %>">
              <td>
                <%= p.punish_date.strftime("%Y-%m-%d") %>
              </td>
              <td>
                <%= link_to p.title, p,:class => "ellipsis'" %>
              </td>
              <td>
                <%= "#{p.target_org.try(:name)}" %>
              </td>
              <td>
                <%= p.punishment_fee %>元
              </td>

              <td>
                <%if check_power("destroy_punishment")%>
                  <%= link_to "删除", p, :method => :delete, :confirm => "确定删除吗?" %>
                <%end%>
              </td>
              <td>
                <%if check_power("edit_punishment") %>
                  <%= link_to "修改", edit_punishment_path(p)%>
                <%end%>
              </td>
              <td>
                <%= link_to_remote "导出excel",:url => punishment_path(p,:format => :js),:method => :get%>
              </td>
            </tr>
          <% end -%>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
          <%=will_paginate @punishments %>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'violations/sidebar') -%>
