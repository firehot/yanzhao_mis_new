<ul class="wat-cf">
  <%if check_power('new_computer_invoice_shippment')%>
    <li class="first <%=check_sub_active_tab(1) %>">
      <%= link_to "领用单", computer_invoice_shippments_path("search[org_id_eq]" => current_user.org_id,:active_sub_tab => 1) %>
    </li>
  <%end%>

  <%if check_power('computer_invoice_shippment_audit')%>
    <li class="<%=check_sub_active_tab(15) %>">
      <%= link_to "待确认", computer_invoice_shippments_path(:active_sub_tab => 15,"search[state]" => MaterialInout::STATE_DRAFT,"search[auditor_id]" => current_user) %>
    </li>
  <% end %>

  <%if params[:active_sub_tab] == '4'%>
    <li class="<%=check_sub_active_tab(4) %>">
      <%= link_to "查看领用单", computer_invoice_shippment_path(@computer_invoice_shippment,:active_sub_tab => 4) %>
    </li>
  <%end%>
  <%if check_power('new_computer_invoice_shippment')%>
    <li class="<%=check_sub_active_tab(6) %>">
      <%= link_to "新建领用单", new_computer_invoice_shippment_path(:active_sub_tab => 6) %>
    </li>
  <%end%>

</ul>
