<div class="block">
  <div class="secondary-navigation">
    <%= render "caption" %>
  </div>
  <div class="content">
    <div class="inner" style='overflow-x : scroll;'>
      <%if @content_item%>
        <h2 class='text-center'><%=@content_item.title%></h2>
        <p class='text-center'><%=@content_item.created_at.strftime('%Y-%m-%d')%> </p>
        <hr />
        <p>
          <%= @content_item.context %>
        </p>
      <%else%>
        <p>暂无内容设置</p>
      <%end%>
    </div>
  </div>
</div>
<% content_for :sidebar, render(:partial => 'sidebar') %>
