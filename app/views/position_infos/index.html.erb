<div class="block">
  <div class="secondary-navigation">
    <%= render 'caption' %>
  </div>
  <div class="content">
    <h2 class="title">&nbsp;</h2>
    <div class="inner">
      <div id='position_info_tree_wrapper'>
        <ul id="position_info_tree" style='display : none;'>
          <li>
            <%if check_view_position_info_power(@root_position_info)%>
              <%=link_to @root_position_info.name,position_info_position_info_items_path(@root_position_info,:active_sub_tab => 9) %>
            <%else%>
              <%=link_to @root_position_info.name,"#"%>
            <%end%>
            <div class='org_chart_operate'>
              <%= link_to "修改", edit_position_info_path(@root_position_info,:active_sub_tab => 4) if check_power('update_position_info') %>
              &nbsp;&nbsp;
              <%= link_to "删除", position_info_path(@root_position_info),:method => :delete,:confirm => "确定要删除吗?" if check_power('destory_position_info')%>
            </div>
            <%= render :partial => "position_info_tree",:locals => {:child_position_infos => @root_position_info.children } %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, render('sidebar') %>
