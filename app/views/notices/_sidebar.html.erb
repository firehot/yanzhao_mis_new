<div class="block">
  <%if [check_power('new_notice'),check_power('new_rule'),check_power('new_address_book')].any? {|ret| ret}%>
    <h3>新建</h3>
    <ul class="navigation">
      <% if check_power("new_notice") %>
        <li><%=link_to "新建通知公告",new_notice_path%></li>
      <% end%>
    </ul>
  <%end%>
</div>
<div class="block">
  <h3>查询</h3>
  <div class="content">
    <%=render "shared/messages/search_form"%>
  </div>
  <% if params[:action] == 'show' %>
    <h3>导出</h3>
    <ul class="navigation">
      <li><%= link_to "导出", self.send("#{@param_name.singularize}_path",instance_variable_get("@#{@param_name.singularize}"),:format => :csv)
%>
    </ul>
  <% end %>
</div>

